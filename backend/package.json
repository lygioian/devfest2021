{
    "name": "bugs-backend",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "start": "yarn build && node dist/index.js",
        "ts": "ts-node src/index.ts",
        "dev": "cross-env WORKING_DIR=. nodemon",
        "build": "tsc",
        "docker:build": "docker build --no-cache -t bugs .",
        "docker:run": "docker run -p 5000:5000 bugs",
        "deploy:adddummygit": "git init && git add . && git commit -m \"* Deploy\"",
        "deploy:removedummygit": "rimraf .git",
        "deploy:caprover": "caprover deploy -h https://captain.beta.stdio.vn -p T8sfU5BHAtGz2vLA -b master -a bugs-be",
        "deploy": "yarn deploy:adddummygit && yarn deploy:caprover && yarn deploy:removedummygit",
        "test": "cross-env NODE_ENV=test ts-mocha tests/index.ts --exit --timeout 20000",
        "test:dev": "nodemon --watch . --exec 'yarn test'",
        "gendata": "ts-node scripts/generate-data.ts",
        "gendata:dev": "cross-env NODE_ENV=test nodemon --watch . --exec 'yarn gendata'"
    },
