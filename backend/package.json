        "nodemailer": "^6.3.0",
        "passport": "^0.4.0",
        "passport-jwt": "^4.0.0",
        "reflect-metadata": "^0.1.13",
        "request-ip": "^2.1.3",
        "saslprep": "^1.0.3",
        "socket.io": "^4.1.1",
        "tsyringe": "^3.3.0",
        "typescript": "^3.4.5"
    },
    "devDependencies": {
